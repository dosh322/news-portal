{
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "env": {
        "browser": true,
        "node": true,
        "es2021": true,
        "jest/globals": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:import/recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:i18next/recommended",
        "prettier"
    ],
    "plugins": ["import", "@typescript-eslint", "react", "react-hooks", "react-refresh", "i18next", "prettier", "jest", "testing-library"],
    "rules": {
        "react-refresh/only-export-components": "warn",
        "linebreak-style": 0,
        "curly": "error",
        "no-case-declarations": "off",
        "no-empty": 0,
        "quotes": ["error", "double", { "avoidEscape": true }],
        "comma-dangle": 0,
        "no-console": ["error", { "allow": ["warn", "error"] }],
        "no-const-assign": 2,
        "no-dupe-class-members": 2,
        "no-duplicate-case": 2,
        "no-extra-parens": [2, "functions"],
        "no-self-compare": 2,
        "accessor-pairs": 2,
        "comma-spacing": [2, {
            "before": false,
            "after": true
        }],
        "max-len": ["error", { "code": 120, "ignoreComments": true }],
        "constructor-super": 2,
        "new-cap": [2, {
            "newIsCap": true,
            "capIsNew": false
        }],
        "new-parens": 2,
        "no-array-constructor": 2,
        "no-class-assign": 2,
        "no-cond-assign": 2,
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "warn",
        "no-mixed-spaces-and-tabs": 0,
        "react/jsx-uses-react": "off",
        "react/react-in-jsx-scope": "off",
        "react/button-has-type": 2,
        "react/prop-types": "off",
        "react/jsx-first-prop-new-line": ["error", "multiline"],
        "react/jsx-max-props-per-line": [2, { "maximum": 1, "when": "multiline" }],
        "react/jsx-props-no-spreading": "warn",
        "react/function-component-definition": 2,
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            }
        ],
        "react/jsx-tag-spacing": [2, {
            "closingSlash": "never",
            "beforeSelfClosing": "always",
            "afterOpening": "never",
            "beforeClosing": "allow"
        }],
        "import/no-unresolved": "off",
        "import/prefer-default-export": "off",
        "import/extensions": "off",
        "import/no-extraneous-dependencies": ["error", { "devDependencies": ["**/*.test.ts", "**/*.test.tsx", "./config/**/*", "**/*/renderWithTranslations/**/*"] }],
        "import/named": "off",
        "import/no-named-as-default-member": "off",
        "i18next/no-literal-string": ["error", { "markupOnly": true, "ignoreAttribute": ["data-testid"] }]
    },
    "overrides": [
        {
            "files": ["**/src/**/*.test.{ts,tsx}"],
            "rules": {
                "i18next/no-literal-string": "off"
            }
        }
    ]
}